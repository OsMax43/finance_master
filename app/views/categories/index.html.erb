


<div class="container">
  <h1 align ="center ">Категорії витрат/доходів</h1>

  
<%== pagy_bootstrap_nav(@pagy) %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th style="width:7%">#</th>
        <th>Назва</th>
        <th style="width:50%">Опис</th>
        <th style="width:25%">Управління</th>
      </tr>
    </thead>
    <tbody>
      
      <% @categories.each do |category|%>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td>
            <table style="width:100%">
            <tr>
            <td style="width:50%"><%=button_to "   Delete   ", category, class: "bi bi-trash3 btn btn-danger btn-sm", method: :delete, type: "button", data: {confirm: "Ти впевнений?"} %></td>
            <td><%=link_to "   Edit   ", edit_category_path(category), class: "bi bi-pencil-square btn btn-secondary btn-sm", type: "button" %></td>
            </tr>
            </table>
          </td>
        </tr>
      <% end %>
      
      
        
    </tbody>
  </table>
  <div class = 'm-3'>
  <%= link_to "Додати нову категорію", new_category_path, class: "btn btn-primary", type: "button"%>
  </div>
<%== pagy_bootstrap_nav(@pagy) %>
</div>

