<%= render 'shared/errors', object: @operation %>

<div class="container">
  <h2 align ="center ">Реєстрація/Редагування інформації про транзакції</h2>


  <div class="card  p-4">
    <%= form_with model: @operation do |f| %>
      
      <div class="row mb-3">
        <%= f.label :category_id, 'Назва категорії', class: "col-sm-2 col-form-label" %>
        
        <div class="col-sm-2">
          <%= f.collection_select :category_id, Category.all.order(:name), :id, :name, class: "form-select" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :otype, 'Тип операції', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-3">
          
          <%= f.select :otype, ["витрата", "доход"], class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :amount, 'Сума', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-2">
          <%= f.text_field :amount, class: "form-control" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :odate, 'Дата', class: "col-sm-2 col-form-label"  %>
        <div class="col-sm-2">
          <%= f.date_field :odate, class: "form-control" %>
        </div>
      </div>

      <div class="row mb-4">
        <%= f.label :description, 'Короткий опис', class: "col-sm-2 col-form-label"  %>
        <div class="col-sm-5">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>

      

      <div class= "fs-4 mb-3">
        <%= f.submit 'Додати', class: "btn btn-primary"%>
        <%= button_tag 'Очистити', type: 'reset', class: "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
